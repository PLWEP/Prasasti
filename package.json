{
	"name": "prasasti",
	"displayName": "Prasasti",
	"description": "Automate source code documentation using AI (Gemini).",
	"version": "2.0.0",
	"publisher": "PLWEP",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/PLWEP/prasasti"
	},
	"keywords": [
		"documentation",
		"ai",
		"gemini",
		"plsql",
		"automation"
	],
	"engines": {
		"vscode": "^1.106.1"
	},
	"categories": [
		"Programming Languages",
		"Machine Learning",
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onView:prasasti-explorer"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "prasasti.refresh",
				"title": "Prasasti: Refresh List",
				"icon": "$(refresh)"
			},
			{
				"command": "prasasti.generateAll",
				"title": "Prasasti: Generate All Docs",
				"icon": "$(sparkle)",
				"shortTitle": "Generate All"
			},
			{
				"command": "prasasti.generateSingle",
				"title": "Prasasti: Regenerate Single Doc",
				"icon": "$(sparkle)",
				"shortTitle": "Regenerate"
			},
			{
				"command": "prasasti.fixAllMarkers",
				"title": "Fix All Markers",
				"icon": "$(tag-add)"
			},
			{
				"command": "prasasti.fixMarker",
				"title": "Add Markers",
				"icon": "$(tag-add)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "prasasti.fixAllMarkers",
					"when": "view == prasasti.problems",
					"group": "navigation@1"
				},
				{
					"command": "prasasti.generateAll",
					"when": "view == prasasti.problems",
					"group": "navigation@2"
				},
				{
					"command": "prasasti.refresh",
					"when": "view == prasasti.problems",
					"group": "navigation@3"
				}
			],
			"view/item/context": [
				{
					"command": "prasasti.fixMarker",
					"when": "view == prasasti.problems && viewItem == marker",
					"group": "inline"
				},
				{
					"command": "prasasti.generateSingle",
					"when": "view == prasasti.problems && viewItem == docs",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "prasasti-explorer",
					"title": "Prasasti",
					"icon": "resources/tomb.png"
				}
			]
		},
		"views": {
			"prasasti-explorer": [
				{
					"id": "prasasti.problems",
					"name": "",
					"icon": "$(warning)"
				}
			]
		},
		"configuration": {
			"title": "Prasasti",
			"properties": {
				"prasasti.files.include": {
					"type": "string",
					"default": "**/*.{plsql,plsvc,views}",
					"description": "Glob pattern untuk generate DOKUMENTASI."
				},
				"prasasti.files.includeMarkers": {
					"type": "string",
					"default": "**/*.{plsql,plsvc,views,entity,projection,client}",
					"description": "Glob pattern khusus untuk cek MARKER (Logic Code)."
				},
				"prasasti.files.gitSkipKeywords": {
					"type": "array",
					"default": [
						"Documented",
						"Documentation",
						"DOCS",
						"Docs Only"
					],
					"description": "Keyword commit message yang dianggap 'Hanya Update Dokumen' (bypass outdated check).",
					"order": 2
				},
				"prasasti.ai.model": {
					"type": "string",
					"default": "gemini-2.5-flash",
					"description": "Model Gemini yang digunakan.",
					"order": 10
				},
				"prasasti.ai.apiKey": {
					"type": "string",
					"default": "",
					"description": "Google Gemini API Key.",
					"order": 11
				},
				"prasasti.behavior.autoApply": {
					"type": "boolean",
					"default": true,
					"description": "Jika true, langsung menimpa file. Jika false, buka 'Diff View'.",
					"order": 20
				},
				"prasasti.network.maxRetries": {
					"type": "number",
					"default": 3,
					"description": "Jumlah retry jika terkena Rate Limit (429).",
					"order": 30
				},
				"prasasti.behavior.markersScan": {
					"type": "string",
					"default": "Max Scan",
					"description": "Opsi scan marker Max Scan / Full Scan.",
					"order": 340
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/sinon": "^21.0.0",
		"@types/vscode": "^1.106.1",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"esbuild": "^0.27.0",
		"eslint": "^9.39.1",
		"mocha": "^11.7.5",
		"npm-run-all": "^4.1.5",
		"sinon": "^21.0.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3"
	}
}
