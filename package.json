{
	"name": "prasasti",
	"displayName": "Prasasti",
	"description": "Automate source code documentation using AI.",
	"version": "1.0.0",
	"publisher": "PLWEP",
	"repository": {
		"type": "git",
		"url": "https://github.com/PLWEP/prasasti"
	},
	"engines": {
		"vscode": "^1.106.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "prasasti.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "prasasti.fixAll",
				"title": "Generate Documentation for All",
				"icon": "$(sparkle)"
			},
			{
				"command": "prasasti.fixSingle",
				"title": "Regenerate Docs",
				"icon": "$(sparkle)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "prasasti.fixAll",
					"when": "view == prasasti.problems",
					"group": "navigation"
				},
				{
					"command": "prasasti.refresh",
					"when": "view == prasasti.problems",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "prasasti.fixSingle",
					"when": "view == prasasti.problems",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"title": "Prasasti Configuration",
			"properties": {
				"prasasti.includedFiles": {
					"type": "string",
					"default": "**/*.{plsql,plsvc,views}",
					"description": "Glob pattern untuk file (contoh: **/*.{plsql,svc})"
				},
				"prasasti.apiKey": {
					"type": "string",
					"default": "AIzaSyA3JtC_qVdSsVjzgtTwq6oR02Ws_Y5x2CI",
					"description": "Google Gemini API Key untuk auto-documentation."
				},
				"prasasti.autoApply": {
					"type": "boolean",
					"default": true,
					"description": "Jika true, AI langsung menimpa file. Jika false, akan membuka tampilan 'Diff View' untuk review."
				},
				"prasasti.maxRetries": {
					"type": "number",
					"default": 3,
					"description": "Jumlah percobaan ulang jika Gemini API terkena Rate Limit (429)."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "prasasti-explorer",
					"title": "Prasasti",
					"icon": "resources/tomb.png"
				}
			]
		},
		"views": {
			"prasasti-explorer": [
				{
					"id": "prasasti.problems",
					"name": "",
					"icon": "$(warning)"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.106.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"typescript-eslint": "^8.46.3",
		"eslint": "^9.39.1",
		"esbuild": "^0.27.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2"
	}
}
